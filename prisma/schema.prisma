generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Referrer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
}

model Referral {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String
  referrerId  Int
  course      String
  createdAt   DateTime @default(now())
  referrer    Referrer @relation(fields:[referrerId],references:[id])
}